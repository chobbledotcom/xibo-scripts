- content_for :title, "Login"
- content_for :page_header, "Login to Xibo CMS Manager"

%section
  - if flash[:error]
    %aside= flash[:error]
  
  = form_with url: login_path, method: :post do |f|
    %fieldset
      = label_tag :username, "Username"
      = text_field_tag :username, nil, required: true, autofocus: true
    
    %fieldset
      = label_tag :password, "Password"
      = password_field_tag :password, nil, required: true
    
    = submit_tag "Login"
