#!/bin/bash -e

# Enable jemalloc for reduced memory usage and latency.
if [ -z "${LD_PRELOAD+x}" ] && [ -f /usr/lib/*/libjemalloc.so.2 ]; then
  export LD_PRELOAD="$(echo /usr/lib/*/libjemalloc.so.2)"
fi

# Generate a fresh SECRET_KEY_BASE for each container
# Since credentials.yml.enc is removed, we don't need RAILS_MASTER_KEY
export SECRET_KEY_BASE=$(openssl rand -hex 64)
echo "Generated fresh SECRET_KEY_BASE for this container"

# Skip database preparation - this app doesn't use a database
# It only calls the Xibo API

exec "${@}"
